<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/temphum_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAqua">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/colorWhite"
            android:layout_height="?attr/actionBarSize"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/actual_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:background="@drawable/back_heading"
        android:textColor="@color/colorBlack"
        android:text="Actual info" />
    <TextView
        android:id="@+id/tempText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/colorWhite"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:text="temperature" />
    <TextView
        android:id="@+id/humText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:background="@color/colorWhite"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:text="humidity" />
    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="18dp"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:text="Posledni aktualizace: dd.mm.yyyy hh:mm:ss" />
    <LinearLayout
        android:id="@+id/image_holder"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/temperature_large"
            android:layout_width="400px"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_height="750px"/>
        <ImageView
            android:id="@+id/humidityLarge"
            android:layout_width="400px"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:layout_height="750px"/>
    </LinearLayout>
