<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.StatisticsFragment">

    <TextView
        android:id="@+id/textViewTemp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature last 30 days"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:paddingBottom="5dp"
        />
    <com.example.iotcontrol.GraphView
        android:id="@+id/graphTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        />
    <TextView
        android:id="@+id/textViewHum"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity last 30 days"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        />
    <com.example.iotcontrol.GraphView
        android:id="@+id/graphHum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        />


</LinearLayout>