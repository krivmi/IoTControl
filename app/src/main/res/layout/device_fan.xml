<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fan_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAqua">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/colorWhite"
            android:layout_height="?attr/actionBarSize"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/onoff"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/circle_border"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/onoff_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/onoff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:text="On / Off"/>
    </LinearLayout>

    <View
        android:id="@+id/line_fan"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <LinearLayout
            android:id="@+id/night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:src="@drawable/night"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:text="Night mode"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/turbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/turbo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:text="Turbo boost"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/time"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:text="      Timer      "/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="10dp">
        <LinearLayout
            android:id="@+id/desc"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dec"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:text="Decrescendo"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/plus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:text="Plus / minus"/>
        </LinearLayout>
    </LinearLayout>
